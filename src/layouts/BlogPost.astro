---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    tags?: string[];
  };
}

const {
  content: { title, description, pubDate, updatedDate, tags },
} = Astro.props;
---

<html lang="en">
<head>
  <BaseHead isArticle=true title={title} description={description} keywords={tags} />
  <style>
    .title {
      font-size: 2.2em;
      margin: 0.25em 0 0;
    }

    hr {
      border-top: 1px solid #DDD;
      margin: 1rem 0;
      border-top-color: #3A3E41FF;
    }

    .tag-container {
      display: flex;
      flex-direction: row;
      gap: 0.5em;
    }

    .tag {
      color: var(--tags-color);
    }
  </style>
</head>

<body>
<Header />
<main>
  <article>
    <h1 class="title">{title}</h1>
    {pubDate && <time>{pubDate}</time>}
    {updatedDate && <div>Last updated on: <time>{updatedDate}</time></div>}
    <div class="tag-container">
      {tags?.map(tag => (
        <div class="tag"><em>{`#${tag}`}</em></div>
      ))}
    </div>
    <hr />
    <slot />
  </article>
</main>
<Footer />
</body>
</html>
